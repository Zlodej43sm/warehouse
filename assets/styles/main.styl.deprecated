.page-container .page-content
  position absolute
  left 250px
  top 0
  right 0
  margin-left 0

.btn-metro
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 0;
  // font-weight: 600;
.btn-link-danger
