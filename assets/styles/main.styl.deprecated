.page-container .page-content .content-frame .content-frame-body.content-frame-body-wide
  margin: 0

.fa.fa-sub
  font-size: 9px;
  padding-right: 1px;

.please-wait
  text-align center
  font-size 30px
  line-height 40px
.please-wait .fa
  font-size 40px
  margin-right 10px

.dataTables_length select
  background-color #fff

.content-frame-left .block .btn-condensed
  min-width 36px
  padding 0
.content-frame-left .block .btn-condensed .fa
  font-size 16px
  line-height 34px
.content-frame-left .block button + button
  margin-left 10px

// Partner Widget
.partner-widget .panel-controls
  margin-top 2px
.partner-widget .panel-heading
  height 56px
.partner-widget .panel-body textarea
  position: absolute;
  bottom: 0;
  resize: none;
  width: 100%;
  background: rgba(255,255,255,0.5);
  border: 0;
  padding: 10px;
  color #fff

// improved radio and checkbox inputs
.impcheck,
.impradio
  float: left;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  margin-bottom: 0;
  padding-left 0 !important
.impcheck + .impcheck,
.impradio + .impradio
  margin-left: 10px;
.impcheck > input,
.impradio > input
  display: none;
.impcheck > .impcheck-label,
.impradio > .impradio-label
  float: left;
  padding-left: 10px;
  cursor: pointer;
  line-height: 18px;
.impcheck > span,
.impradio > span
  display: block;
  float: left;
  width: 18px;
  height: 18px;
  margin-right 5px
  background: url('../../images/icheck/grey.png') 0 0 no-repeat;
  cursor: pointer;
.impcheck:hover > input + span
  background-position: -20px 0;
.impcheck > input:checked + span
  background-position: -40px 0;
.impcheck > input:disabled + span
  background-position: -60px 0;
  cursor: default;
.impcheck > input:disabled + span + .impcheck-label
  color: #aaa;
  cursor: default;
.impcheck > input:checked:disabled + span
  background-position: -80px 0;
.impradio > span
  background-position: -100px 0;
.impradio:hover > input + span
  background-position: -120px 0;
.impradio > input:checked + span
  background-position: -140px 0;
.impradio > input:disabled + span
  background-position: -160px 0;
  cursor: default;
.impradio > input:disabled + span + .impradio-label
  color: #aaa;
  cursor: default;
.impradio > input:checked:disabled + span
  background-position: -180px 0;

@media only screen and (max-width: 1024px)
  .page-container .page-sidebar
    width 100%
  .page-container .page-content
    left 0
    top 50px
  .page-container .page-content .content-frame .content-frame-left
  .page-container .page-content .content-frame .content-frame-right
    display block
    border-right 0