extends ../layout/application

mixin saveBtn
  button.btn.btn-info.btn-metro(type="submit")
    span.fa.fa-check
    = __('Save')
mixin restoreDftBtn
  button.btn.btn-link.btn-link-info(type="submit", name="_restore", value="1", onclick='return confirm("' + __('Are you sure?') + '")')
    span.fa.fa-check
    = __('Restore Default')

block body
  .content-frame
    .content-frame-top
      .page-title
        h2= __('Widget Content')
  form(method='POST', action=strformat('/widgetContent/{id}', widget), id='widgetContent-update')
    each item, key in texts
      .row
        label.col-md-3.col-sm-3.col-xs-3(for=key)= key
        .col-md-5.col-sm-3.col-xs-3
          input.form-control(type='text', name=key, value=item)
    .row.send
      +saveBtn
      +restoreDftBtn


