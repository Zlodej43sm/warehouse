if errors
  each error in errors
    p= error

form.form-horizontal(action='/auth/local', method='post')
  input(type='hidden', name='_csrf', value='#{_csrf}')
  .form-group
    .col-md-12
      input.form-control(type='text', name="identifier", placeholder='Username or Email')
  .form-group
    .col-md-12
      input.form-control(type='password', name="password", placeholder='Password')
  .form-group
    .col-md-6
      a.btn.btn-link.btn-block(href='#') Forgot your password?
    .col-md-6
      button.btn.btn-info.btn-block(type="submit") Log In
  //- .login-subtitle
    = __("Don't have an account yet?")
    a.push-left-5(href='#')
      = __("Create an account")